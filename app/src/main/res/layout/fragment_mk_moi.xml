<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentMKmoi">

    <TextView
        android:id="@+id/tvTitle_mkmoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:text="Nhập mật khẩu mới của bạn"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_mkmoi_quenmk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle_mkmoi"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edit_text_background"
        android:hint="Nhập mật khẩu mới"
        android:inputType="textPassword"
        android:minHeight="60dp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edt_xacnhanmk_quenmk"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/edt_mkmoi_quenmk"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edit_text_background"
        android:hint="Xác nhận mật khẩu mới"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_datmkmoi_quenmk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20dp"
        android:layout_below="@+id/edt_xacnhanmk_quenmk"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:text="Đặt mật khẩu mới" />

</RelativeLayout>