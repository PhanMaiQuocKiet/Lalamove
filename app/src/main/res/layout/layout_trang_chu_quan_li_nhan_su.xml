<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Banner Section -->
    <RelativeLayout
        android:id="@+id/banner_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_fresh"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/banner_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background" /> <!-- Replace with your banner image -->
    </RelativeLayout>

    <!-- Grid Section -->
    <GridLayout
        android:id="@+id/grid_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner_section"
        android:columnCount="4"
        android:rowCount="1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- Order Item -->
        <LinearLayout
            android:id="@+id/ln_log_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView

                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_log_out" /> <!-- Replace with your icon -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Withdraw Item -->
        <LinearLayout
            android:id="@+id/ln_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_settings" /> <!-- Replace with your icon -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cài Đặt khác"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Linked Wallet Item -->
        <LinearLayout
            android:id="@+id/ln_XuLyDonPhanHoi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_help_center" /> <!-- Replace with your icon -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xử lí đơn phản hồi"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Help Center Item -->
        <LinearLayout
            android:id="@+id/ln_ThongTinTaiKhoan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_friend" /> <!-- Replace with your icon -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản lí nhân sự"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </GridLayout>
</RelativeLayout>