<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Nút Back -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:layout_marginTop="15dp"/>

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trung tâm trợ giúp"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/btn_back" />

    <!-- Thanh ngang -->
    <View
        android:id="@+id/thanhngang"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/title_text"/>

    <!-- Mục "Tất cả chủ đề" -->
    <LinearLayout
        android:id="@+id/tatcachude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_below="@+id/thanhngang">

        <TextView
            android:id="@+id/tatcachude_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả chủ đề"
            android:textSize="25sp"
            android:textStyle="bold"
/>
    </LinearLayout>


    <!-- LinearLayout chứa các mục -->
    <LinearLayout
        android:id="@+id/tracuu"
        android:layout_below="@+id/tatcachude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <!-- Mục "Tra cứu đơn phản hồi" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/Tracuu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_Overview" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tra cứu đơn phản hồi"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem các đơn phản hồi để gửi"
                    android:textSize="10sp"
                    android:textStyle="normal"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Thanh ngang -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"/>

        <!-- Mục "Chỉnh sửa và hủy đơn hàng" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/chinhsuahuydonhang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_pen"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chỉnh sửa và hủy đơn hàng"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chỉnh sửa đơn hàng, hủy đơn hàng, thay đổi tài xế"
                    android:textSize="10sp"
                    android:textStyle="normal"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Thanh ngang -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"/>

        <!-- Mục "Giới hạn hàng hóa và kích thước" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/gioihanh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_empty_box"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới hạn hàng hóa và kích thước"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các mặt hàng không vận chuyển, kích thước và trọng lượng tối đa"
                    android:textSize="10sp"
                    android:textStyle="normal"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Thanh ngang -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"/>

        <!-- Mục "Coupon và ưu đãi" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/coupon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_voucher"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coupon và ưu đãi"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các mặt hàng không vận chuyển, kích thước và trọng lượng tối đa"
                    android:textSize="10sp"
                    android:textStyle="normal"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Thanh ngang -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"/>

        <!-- Mục "Thông tin chung" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/thongtin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_info"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin chung"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các loại dịch vụ, khu vực kinh doanh, bảo hiểm, v.v."
                    android:textSize="10sp"
                    android:textStyle="normal"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Thanh ngang -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"/>

        <!-- Mục "Vấn đề về đơn hàng" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/vande"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_error"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vấn đề về đơn hàng"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Không thể kết nối tài xế, hàng hóa bị hư hỏng, khiếu nại, v.v."
                    android:textSize="10sp"
                    android:textStyle="normal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
