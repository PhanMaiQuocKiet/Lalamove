<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_DonHang_TaiXe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/actionBarTheme"
        android:popupTheme="?attr/actionBarPopupTheme">

        <ImageView
            android:id="@+id/img_TaiXe_DonHang_QuayLai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_gravity="start"
            android:padding="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn Hàng"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_Donhang_TaiXe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_DonHang_TaiXe"
        android:layout_marginTop="8dp"
        app:tabIndicatorColor="@color/orange_fresh"
        app:tabSelectedTextColor="@color/orange_fresh"
        app:tabTextColor="@android:color/black"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_DonHang_TaiXe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_layout_Donhang_TaiXe"/>
</RelativeLayout>